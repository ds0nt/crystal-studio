html(ng-app='CrystalApp')
  head
    link(rel='stylesheet', href='components/angular-material/angular-material.min.css')
    title Crystal Studio
  body(ng-controller='AppCtrl as ctrl')
    md-content
      md-toolbar
        div(class='md-toolbar-tools')
          md-button(class='md-icon-button', aria-label='Settings')
            md-icon(md-svg-icon='components/angular-material/demos/toolbar/demoBasicUsage/img/icons/menu.svg')
          md-button(class='md-icon-button', aria-label='Open', ng-click='openFile()')
            md-icon(md-svg-icon='images/open.svg')
            md-tooltip Open
          md-button(class='md-icon-button', aria-label='Save')
            md-icon(md-svg-icon='images/save.svg')
            md-tooltip Save
          h2
            span Crystal Studio
          span(flex)
          md-button(class='md-icon-button', aria-label='More')
            md-icon(md-svg-icon='components/angular-material/demos/toolbar/demoBasicUsage/img/icons/more_vert.svg')
            md-tooltip More
      md-tabs
        md-tab(label='General')
          md-content(class='md-padding')
            form
              md-input-container
                label ID
                input(type='text')
              md-input-container
                label Name
                input(type='text')
              md-input-container
                label Version
                input(type='text')
              md-input-container
                label Description
                textarea(type='text')
        md-tab(label='Modules')
          md-content(class='md-padding')
            h1(class='md-display-2') Modules
            p Test
        md-tab(label='Imports')
          md-content(class='md-padding')
            h1(class='md-display-2') Imports
            p Test
        md-tab(label='Exports')
          md-content(class='md-padding')
            h1(class='md-display-2') Exports
            p Test
        md-tab(label='Outputs')
          md-content(class='md-padding')
            h1(class='md-display-2') Outputs
            p Test
    script(src='components/angular/angular.min.js')
    script(src='components/angular-animate/angular-animate.min.js')
    script(src='components/angular-aria/angular-aria.min.js')
    script(src='components/angular-material/angular-material.min.js')
    script.
      require('coffee-script').register();
      var remote = require('remote');
      var dialog = remote.require('dialog');
    script(src='scripts/app.js')